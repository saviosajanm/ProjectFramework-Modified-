@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Login">
        <div class="container center_div">
            <h2>Login to Site</h2>

            <div class="form-group">
                <label for="txtUserName">User Name or EMail:</label><br />
                <input type="text" id="txtUserName" class="form-control" name="UserName" />

            </div>
            <div class="form-group">
                <label for="txtPassword">Password:</label><br />
                <input type="password" id="txtPassword" class="form-control" name="Password" />
            </div>
            <input type="submit" value="Submit" class="btn btn-primary" /><br /><br />
            <label> @Model.StatusString </label>
        </div>
    </form>

