@model AdminViewModel
@{
    ViewData["Title"] = "Settings Page";
}
<h2>@ViewData["Title"].</h2>
<div class="panel panel-primary">
    <div class="panel-heading"><h4>Configure Site Settings</h4></div>
    <div class="panel-body">
        <form asp-action="Settings" method="post">
            <div class="form-group">
                <label asp-for="AppName">Application Name</label>
                <input asp-for="AppName" class="form-control" style="min-width: 100%;" />
            </div>
            <div class="form-group">
                <label asp-for="MainHeading">Main Heading</label>
                <input asp-for="MainHeading" class="form-control" style="min-width: 100%;" />
            </div>
            <div class="form-group">
                <label asp-for="MainDesc">Main Description</label>
                <textarea asp-for="MainDesc" class="form-control" style="min-width: 100%;"></textarea>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsChecked" /> Enable Authentication Check for Mobile API Calls
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            @if (!string.IsNullOrEmpty(Model.StatusString))
            {
                <div class="form-group">
                    <div class="text-danger font-weight-bold">@Model.StatusString</div>
                </div>
            }
        </form>
    </div>
</div>